<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/benefit_layout"
        android:layout_width="match_parent"
        android:layout_height="177.5dp"
        android:background="@drawable/btn_main_before"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="200dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/more_information"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25.5dp"
                android:layout_marginStart="140dp"
                android:src="@drawable/move_gray"/>

        </LinearLayout>

        <TextView
            android:id="@+id/information_text"
            android:layout_width="wrap_content"
            android:layout_height="48.3dp"
            android:layout_marginLeft="28.5dp"
            android:text="스타트업 청년일자리 지원사업"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="10.5sp"
            android:layout_marginTop="42.8dp"/>

    </LinearLayout>

</LinearLayout>