<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_result_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="17dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_result_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/search_result_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/gray"
            app:layout_constraintHeight_percent=".30"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintVertical_bias=".3"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintBottom_toTopOf="@+id/bottom_tag_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="저소득 재가노인 식사 및 밑반찬 배달 지원"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_tag_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@+id/search_result_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/search_result_subject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:autoSizeTextType="none"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".215"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".8"
                app:layout_constraintWidth_percent=".75"
                tools:text="#영유아 #장애인 #군인/보훈대상자 " />

            <TextView
                android:id="@+id/search_result_views"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center_vertical|end"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".22"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".81"
                app:layout_constraintWidth_percent=".3"
                tools:text="View 6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>