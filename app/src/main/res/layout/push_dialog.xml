<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:text="알림 수신 설정 안내"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:fontFamily="@font/jalnan"
                android:text="일시 : "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/push_permitted_date_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/jalnan"
                android:text="2020년 12월 9일"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:fontFamily="@font/jalnan"
                android:text="전송자 : "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/push_permitted_sender_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:fontFamily="@font/jalnan"
                android:layout_marginStart="20dp"
                android:text="너의 혜택은"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <!-- 안내 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="10sp"
            android:text="앱 푸시 알림 수신을 허용했습니다"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/push_permit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:text="확 인"
            android:textSize="20sp"
            android:textColor="@color/colorMainWhite"
            android:background="@drawable/btn_done"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>