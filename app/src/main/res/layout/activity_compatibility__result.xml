<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.Compatibility.Compatibility_ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 고정된 텍스트. 아래의 텍스트들과 해시태그만 결과에 따라서 적절한 값으로 바뀌도록 한다 -->
        <LinearLayout
            android:id="@+id/compatibility_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/compatibility_result_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paybooc_medium"
                android:text="아이디"
                android:textSize="17sp"
                android:textColor="#000"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paybooc_medium"
                android:text="님의 복지 유형은"
                android:textSize="17sp"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/compatibility_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ridibatang"
            android:text="마! 국가 도움따위 필요없어!\n상남자 복지"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/compatibility_result_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/compatibility_result_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ridibatang"
            android:text="러시아"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/compatibility_description_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:textColor="#303daf"
            android:textStyle="bold"/>

        <!-- 표시되는 이미지는 서버에서 결과에 따라 같이 받아온다? -->
        <ImageView
            android:id="@+id/compatibility_result_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/result_image"
            app:layout_constraintTop_toBottomOf="@id/compatibility_result_country"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"/>

        <!-- 이미지 밑의 해시태그 또한 이미지처럼 서버에서 결과에 따라서 알맞은 텍스트를 불러와 삽입한다
         가로로 배치해서 첫 2개 해시태그 텍스트들은 이 안으로 들어가게 한다 -->
        <LinearLayout
            android:id="@+id/result_first_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            app:layout_constraintTop_toBottomOf="@id/compatibility_result_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/first_result_hashtag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".32"
                android:fontFamily="@font/paybooc_bold"
                android:text="#방임형_복지"
                android:textColor="#000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/second_result_hashtag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".32"
                android:text="#자식사랑"
                android:visibility="gone"
                android:textColor="#000"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- 결과로 나온 나라에서 제공하는 복지에 대한 설명 텍스트를 삽입하는 텍스트뷰 -->
        <TextView
            android:id="@+id/result_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/result_first_linear"
            android:fontFamily="@font/lotte_medium"
            android:text="세계에서 가장 큰 나라!\n제일 많은 나라들과 인접한 나라!\n남성보다 여성이 더 많은 나라!\n최고 수준의 무상교육!
\n\n모두 러시아의 특징이에요!\n\n농담 반 진담 반으로 물이 없을 때는 보드카를 마신다는 러시아 클라쓰!\n\n현재 러시아는 재정악화로 인해
복지 수준이 좋지 않아요~\n\n하지만 상대적으로 탄탄한 아동복지를 자랑하고 있어요!\n\n나에게는 차갑지만 내 아이에게는 따뜻한 러시아에 사는 것은 어떠신가요!"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <!-- 환상의 케미국가, 환장의 케미국가를 설명하는 텍스트뷰. 환상은 파란색, 환장은 빨간색으로 표시한다 -->
        <LinearLayout
            android:id="@+id/horizontal_good_bad_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_description_textview"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:fontFamily="@font/lotte_medium"
                android:text="환상의 케미국가"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:fontFamily="@font/lotte_medium"
                android:text="환장의 케미국가"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizontal_good_bad_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_good_bad_text">

            <ImageView
                android:id="@+id/result_good_image"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/result_good_image"/>

            <ImageView
                android:id="@+id/result_bad_image"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/result_bad_image"/>

        </LinearLayout>

        <!-- 공유하기, 프로필에 유형 등록하기, 닫기 버튼 -->
        <Button
            android:id="@+id/share_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paybooc_bold"
            android:text="공유하기"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_good_bad_images"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/regist_my_type_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paybooc_bold"
            android:text="프로필에 유형 등록하기"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/share_btn"/>

        <Button
            android:id="@+id/compatibility_close_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paybooc_bold"
            android:text="닫기"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:background="@android:color/holo_blue_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regist_my_type_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>