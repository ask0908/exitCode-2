<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.Compatibility.Compatibility_FirstActivity">

    <TextView
        android:id="@+id/first_question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jalnan"
        android:text="Q1."
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#6f52e8"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/first_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문제 텍스트"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_question_number"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/first_question_image"
        android:layout_width="330dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_question_text"
        android:src="@drawable/first_question"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/first_question_first_btn"
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_question_image"
        android:layout_marginTop="30dp"
        android:text="선택지 1"
        android:textSize="25sp"
        android:background="#1EC800"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/first_question_second_btn"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_question_first_btn"
        android:text="선택지 2"
        android:textSize="25sp"
        android:background="#1EC800"
        android:textColor="#fff"/>

</androidx.constraintlayout.widget.ConstraintLayout>