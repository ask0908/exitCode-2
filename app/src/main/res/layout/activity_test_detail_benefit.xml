<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Test.TestDetailBenefitActivity">

    <!-- 공유 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/review_top_horizon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/welf_imageview"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight=".60" />

                <TextView
                    android:id="@+id/welf_word_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center_horizontal|center"
                    android:lineSpacingExtra="20sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorMainWhite"
                    android:textSize="20dp" />

            </LinearLayout>

            <!-- 공유 버튼, 좋아요 버튼 -->
            <LinearLayout
                android:id="@+id/share_and_liked_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".10" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight=".70" />

                <ImageView
                    android:id="@+id/review_share_imageview"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".20"
                    android:src="@drawable/share_black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight=".015" />

                <!-- 즐겨찾기는 오픈베타 이후 다듬는다 -->
                <com.like.LikeButton
                    android:id="@+id/favorite_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".15"
                    android:visibility="gone"
                    app:anim_scale_factor="10"
                    app:icon_size="10dp"
                    app:icon_type="star"
                    app:like_drawable="@drawable/star_on"
                    app:unlike_drawable="@drawable/star_off" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/welfare_desc_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="여성장애인 출산비용 지원"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_top_horizon_layout"
            app:layout_constraintWidth_percent=".90" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 여기에 뷰페이저를 넣어야 함 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/detail_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent=".93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_top_layout"
        app:tabTextColor="@color/colorBlack"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/colorPrimaryDark">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/content_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/review_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/facilities_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주변센터" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detail_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_tab_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>