<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/other_youtube_layout"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4">

            <ImageView
                android:id="@+id/other_youtube_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#54FF0000"
                android:backgroundTint="#B3B1B2"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/play_arrow_white"/>

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".05"/>

        <TextView
            android:id="@+id/other_youtube_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".53"
            android:fontFamily="@font/paybooc_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:maxLines="3"
            android:textSize="15sp"
            android:lineSpacingExtra="3sp"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:text="텍스트"/>


    </LinearLayout>

</LinearLayout>