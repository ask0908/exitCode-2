<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainWhite"
    android:fillViewport="true"
    tools:context=".fragment.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_toolbar">

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_rectangle"
                android:drawableStart="@drawable/search_black"
                android:fontFamily="@font/nanum_barun_gothic_bold"
                android:hint="혜택을 검색해보세요"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:id="@+id/divide_search"
            style="@style/Divider.Horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout" />

        <LinearLayout
            android:id="@+id/recommend_and_recent_search_keyword_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divide_search">

            <TextView
                android:id="@+id/recommend_search_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/jalnan"
                android:paddingTop="16dp"
                android:text="추천 검색어"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/recent_search_history_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jalnan"
                android:paddingTop="16dp"
                android:visibility="gone"
                android:text="최근 검색기록"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- 메인에 있던 카테고리 선택란, 가로 1줄에 5개씩 카테고리 버튼이 들어가게 한다
        수직 리니어 레이아웃 안에 이미지가 위에 있고 텍스트가 밑에 있는 형식으로 만든다(와이어 프레임 참고) -->
        <LinearLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_and_recent_search_keyword_layout">

            <TextView
                android:id="@+id/user_interest_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/jalnan"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="테마 키워드"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:id="@+id/main_job"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".3"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:lineSpacingExtra="28sp"
                        android:text="# 취업·창업"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_student"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".3"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_job"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/main_student_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 학생"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_living"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_student"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/main_living_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:gravity="center"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 주거"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2열 -->

            <!-- 3열 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/main_child"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".29"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_pregnancy"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_child_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 아기·어린이"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_cultural"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_child"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_cultural_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:text="# 문화·생활"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_pregnancy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".29"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/main_pregnancy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 육아·임신"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/main_company"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".29"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_company_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 기업·자영업자"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_homeless"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".29"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_company"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_homeless_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 저소득층"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_old"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_homeless"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/main_old_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 중장년·노인"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/main_disorder"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/main_disorder_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 장애인"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_multicultural"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent=".29"
                    app:layout_constraintHeight_percent="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_disorder"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/main_multicultural_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 다문화"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_law"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:background="@drawable/search_fragment_after_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_multicultural"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/main_law_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="28sp"
                        android:text="# 법률"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="14sp"  />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_img_and_btn_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent=".38"
            app:layout_constraintVertical_bias="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_layout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent=".20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/jalnan"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:text="내 주변 혜택 찾기"
                android:textColor="@color/colorMainWhite"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent=".80"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/map_btn"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight=".55"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/shadow_button_layer_list"
                    android:fontFamily="@font/jalnan"
                    android:lineSpacingExtra="20sp"
                    android:text="지도에서 혜택 확인"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight=".45"
                    android:src="@drawable/map_function_img" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>