<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseFirstInterestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent=".145"
            android:background="@drawable/renewal_gradation_background">

            <ImageView
                android:id="@+id/first_interest_back_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/back_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintHorizontal_bias=".04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".2"
                app:layout_constraintWidth_percent=".1" />

            <TextView
                android:id="@+id/first_select_interest_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent=".6"
                app:layout_constraintHeight_percent=".7"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias=".22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:fontFamily="@font/jalnan"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="관심사 선택"
                android:textColor="@color/colorMainWhite" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_white_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent=".9"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/radius_25">

            <TextView
                android:id="@+id/first_interest_top_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent=".9"
                app:layout_constraintHeight_percent=".08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias=".015"
                android:fontFamily="@font/jalnan"
                android:lineSpacingExtra="6sp"
                android:text="관심 있는 키워드를 선택해 주세요\n(다중 선택 가능)"
                android:gravity="center"/>

            <TextView
                android:id="@+id/age_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintVertical_bias=".09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorBlack"
                android:text="1. 나이대"
                android:gravity="center"/>

            <!-- 나이대 버튼들을 모아둔 레이아웃 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age_text"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/under_teenage_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="10대 미만" />

                    <Button
                        android:id="@+id/teenage_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="10대"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/twenty_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="20대"/>

                    <Button
                        android:id="@+id/thirty_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="30대"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/forty_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="40대"/>

                    <Button
                        android:id="@+id/fifty_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="50대"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/over_sixty_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="60대 이상"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/area_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintVertical_bias=".43"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorBlack"
                android:text="2. 지역"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintVertical_bias=".72"
                app:layout_constraintWidth_percent=".8"
                app:layout_constraintHeight_percent=".35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_seoul_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="서울"/>

                    <Button
                        android:id="@+id/interest_gangwon_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="강원"/>

                    <Button
                        android:id="@+id/interest_gyonggi_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="경기"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_gyongnam_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="경남"/>

                    <Button
                        android:id="@+id/interest_gyongbuk_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="경북"/>

                    <Button
                        android:id="@+id/interest_gwangju_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="광주"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_daegu_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="대구"/>

                    <Button
                        android:id="@+id/interest_daejeon_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="대전"/>

                    <Button
                        android:id="@+id/interest_busan_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="부산"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_sejong_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="세종"/>

                    <Button
                        android:id="@+id/interest_ulsan_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="울산"/>

                    <Button
                        android:id="@+id/interest_incheon_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="인천"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_jeonnam_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="전남"/>

                    <Button
                        android:id="@+id/interest_jeonbuk_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="전북"/>

                    <Button
                        android:id="@+id/interest_jeju_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="제주"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/interest_chungnam_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="충남"/>

                    <Button
                        android:id="@+id/interest_chungbuk_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/interest_unselected"
                        android:textColor="@color/colorGray_B"
                        android:text="충북"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/go_second_interest_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".07"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".94"
                app:layout_constraintWidth_percent=".79"
                android:background="@drawable/radius_smallround_pink_button"
                android:text="다음"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>