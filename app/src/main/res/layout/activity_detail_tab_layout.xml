<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTabLayoutActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/DetailTabTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".205"
        android:background="@drawable/renewal_gradation_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintVertical_bias=".05">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/arrow_left_black"
                app:layout_constraintHeight_percent="0.85"
                app:layout_constraintWidth_percent="0.09"
                app:layout_constraintHorizontal_bias="0.05"
                android:backgroundTint="@color/white"/>

            <ImageButton
                android:id="@+id/bookmark_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bookmark_no"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintWidth_percent="0.06"
                app:layout_constraintHorizontal_bias="0.83"
                android:backgroundTint="@color/white"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/share_black"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintWidth_percent="0.073"
                app:layout_constraintHorizontal_bias="0.94"
                android:backgroundTint="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/BenefitTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="none"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent=".3"
            app:layout_constraintWidth_percent=".75"
            app:layout_constraintVertical_bias=".42"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".385"
            android:background="@drawable/radius_25">

            <TextView
                android:id="@+id/detail_contents_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="내용"
                android:textStyle="bold"
                android:textColor="@color/colorPink"
                android:background="@drawable/radius_smallround_pink_border"
                app:layout_constraintHeight_percent=".7"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintVertical_bias=".8"
                app:layout_constraintHorizontal_bias=".16"
                android:clickable="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_application_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="신청"
                android:textStyle="bold"
                android:textColor="@color/colorGray_B"
                android:background="@color/white"
                app:layout_constraintHeight_percent=".7"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintVertical_bias=".8"
                app:layout_constraintHorizontal_bias=".5"
                android:clickable="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_review_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="리뷰"
                android:textStyle="bold"
                android:textColor="@color/colorGray_B"
                android:background="@color/white"
                app:layout_constraintHeight_percent=".7"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintVertical_bias=".8"
                app:layout_constraintHorizontal_bias=".84"
                android:clickable="true"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/Detail_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetailTabTop"
        app:layout_constraintVertical_bias=".4"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/detail_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".79"/>

</androidx.constraintlayout.widget.ConstraintLayout>