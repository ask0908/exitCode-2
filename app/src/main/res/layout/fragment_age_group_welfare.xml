<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/renewal_layout_gray_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AgeGroupWelfareFragment">

    <TextView
        android:id="@+id/age_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".43"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintVertical_bias=".07"
        app:layout_constraintHorizontal_bias=".22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/jalnan"
        android:text="나이대별 혜택"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/age_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/welfare_category_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>