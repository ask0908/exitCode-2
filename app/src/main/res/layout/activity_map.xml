<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/korea_img"
    tools:context=".activity.MapActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/jalnan"
            android:text="지역별 혜택 지도"
            android:textColor="@color/colorMainWhite"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/area_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:fontFamily="@font/jalnan"
            android:text="현재 위치 : 부산"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:paddingLeft="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".30"/>

        <TextView
            android:id="@+id/change_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:fontFamily="@font/jalnan"
            android:layout_gravity="center_vertical"
            android:text="지역변경"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/jeonnam_benefit_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="472dp"
        android:background="@color/fui_transparent"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="전 남"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/seoul_benefit_btn"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/seoul_oval"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="서 울\n(245)"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/incheon_benefit_btn"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="108dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:text="인 천"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/gyongi_benefit_btn"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="156dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:text="경 기"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/gangwon_benefit_btn"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/jalnan"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:text="강 원"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/choongnam_benefit_btn"
        android:layout_width="77dp"
        android:layout_height="73dp"
        android:layout_marginTop="244dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:text="충 남"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"/>

    <Button
        android:id="@+id/jeonbuk_benefit_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="364dp"
        android:background="@color/fui_transparent"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="전 북"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"/>

    <Button
        android:id="@+id/choongbuk_benefit_btn"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_marginTop="244dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:text="충 북"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"/>

    <Button
        android:id="@+id/jeju_benefit_btn"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:background="@color/fui_transparent"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="제 주"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jeonnam_benefit_btn" />

    <Button
        android:id="@+id/gyongbuk_benefit_btn"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="252dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:text="경 북"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

    <Button
        android:id="@+id/gyongnam_benefit_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="416dp"
        android:background="@color/fui_transparent"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="경 남"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"/>

    <TextView
        android:id="@+id/map_bottom_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:fontFamily="@font/jalnan"
        android:textSize="15sp"
        android:textColor="@color/colorMainWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>