<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_logo_text"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/app_logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/bauhaus_bold"
        android:lineSpacingExtra="6sp"
        android:gravity="center"
        android:padding="20dp"
        android:text="UrBene fit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60sp" />

    <FrameLayout
        android:id="@+id/kakao_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo_text">

        <com.kakao.usermgmt.LoginButton
            android:id="@+id/real_kakao"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/fake_kakao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/btn_main_after"
            android:fontFamily="@font/jalnan"
            android:text="카카오로 시작하기"
            android:textColor="@color/colorMainWhite"
            android:textSize="17sp" />

    </FrameLayout>

    <!-- 다른 sns 로그인은 아직 로직, 계획 다 없어서 안 보이게 처리함 -->
    <TextView
        android:id="@+id/other_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="다른 계정으로 시작하기"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakao_login_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_login_layout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <!-- 페이스북 로그인 버튼 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_login"
                app:maxImageSize="36dp"
                app:borderWidth="0dp"
                android:layout_gravity="center"
                android:backgroundTint="#3B5999"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_btn"
                android:layout_gravity="center"
                android:backgroundTint="#DA4835"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_login_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:borderWidth="0dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"/>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
