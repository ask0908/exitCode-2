<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@drawable/close" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/jalnan"
        android:lineSpacingExtra="6sp"
        android:gravity="center"
        android:padding="20dp"
        android:text="당신이 모르는 혜택을\n알려주는 서비스"
        android:textColor="@color/colorPurple"
        android:textSize="30sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <com.kakao.usermgmt.LoginButton
            android:id="@+id/real_kakao"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <com.psj.welfare.custom.CustomLoginButton
            android:id="@+id/fake_kakao"
            style="@style/LoginButtonStyle"
            android:layout_gravity="center"
            app:bg="@drawable/btn_kakao"
            app:symbol="@drawable/login_kakao_symbol"
            app:text="@string/login_kakao"
            app:textColor="@color/colorMainWhite" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jalnan"
        android:text="다른 계정으로 시작하기"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <!-- 네이버 로그인 버튼 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:borderWidth="0dp"
                app:maxImageSize="36dp"
                android:src="@drawable/naver_btn"
                android:backgroundTint="#00D136"/>

        </FrameLayout>

        <!-- 페이스북 로그인 버튼 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_login"
                app:maxImageSize="36dp"
                app:borderWidth="0dp"
                android:layout_gravity="center"
                android:backgroundTint="#3B5999"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_btn"
                android:layout_gravity="center"
                android:backgroundTint="#DA4835"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_login_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:borderWidth="0dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
