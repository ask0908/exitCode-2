<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탈퇴 이유"
        android:textSize="20sp"
        android:layout_marginStart="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorGray_B"/>

    <RadioGroup
        android:id="@+id/withdraw_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/first_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/withdraw_radiobutton_img"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="나한테 맞는 혜택이 없어서"/>

        <RadioButton
            android:id="@+id/second_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/withdraw_radiobutton_img"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="보는 게 어려워서"/>

        <RadioButton
            android:id="@+id/third_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/withdraw_radiobutton_img"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="사용하기 불편해서"/>

        <RadioButton
            android:id="@+id/fourth_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableEnd="@drawable/withdraw_radiobutton_img"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:text="기타"/>

    </RadioGroup>

</LinearLayout>