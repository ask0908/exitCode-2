<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"
    android:paddingBottom="7dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탈퇴 이유"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/colorGray_B"/>

    <RadioGroup
        android:id="@+id/withdraw_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="7dp"
        android:paddingEnd="7dp">

        <RadioButton
            android:id="@+id/first_reason"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/withdraw_first_reason"/>

        <RadioButton
            android:id="@+id/second_reason"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/withdraw_second_reason"/>

        <RadioButton
            android:id="@+id/third_reason"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/withdraw_third_reason"/>

        <RadioButton
            android:id="@+id/fourth_reason"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:text="@string/withdraw_fourth_reason"/>

    </RadioGroup>

</LinearLayout>