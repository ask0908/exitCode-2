<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/push_gather_item_layout"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/push_gather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:lineSpacingExtra="5sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="혜택 제목 혜택 제목 혜택 제목 혜택 제목 "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/push_gather_date"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1일 전"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/push_gather_desc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jalnan"
        android:lineSpacingExtra="6sp"
        android:text="혜택 내용 혜택 내용 혜택 내용 혜택 내용 혜택 내용 "
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/push_gather_title"
        app:layout_constraintVertical_bias="0.183" />

</androidx.constraintlayout.widget.ConstraintLayout>