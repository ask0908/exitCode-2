<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/push_gather_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/push_gather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic_bold"
            android:lineSpacingExtra="5sp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="혜택 제목 혜택 제목 혜택 제목 혜택 제목 "
            android:textSize="15.5sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/right_black"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/push_gather_desc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jalnan"
            android:lineSpacingExtra="6sp"
            android:text="혜택 내용 혜택 내용 혜택 내용 혜택 내용 혜택 내용 "
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/push_gather_title"
            app:layout_constraintVertical_bias="0.183" />

        <TextView
            android:id="@+id/push_gather_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:text="1분 전"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/push_gather_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>