<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainWhite"
    android:clipToPadding="false"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_fragment_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bauhaus_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="UrBene fit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 로그인하면 보이지 않고 로그인 안 했을 때만 보여야 함? -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/test_view_pager2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_textview" />

        <Button
            android:id="@+id/kakao_unlink_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카톡 회원탈퇴"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.161"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_fragment_cardview"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:elevation="30dp"
            app:cardBackgroundColor="@color/app_top_color"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_textview">

            <LinearLayout
                android:id="@+id/main_middle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_fragment_textview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".10"
                    android:elevation="25dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight=".60"
                        android:fontFamily="@font/jalnan"
                        android:text="당신이 놓치고 있는"
                        android:textColor="@color/colorMainWhite"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/find_welfare_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".40"
                        android:background="@drawable/shadow_button_layer_list"
                        android:fontFamily="@font/jalnan"
                        android:text="혜택찾기"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:translationZ="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".90"
                    android:scaleType="fitEnd"
                    android:src="@drawable/main_fragment_image" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recommend_welfare_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainWhite"
            android:fontFamily="@font/jalnan"
            android:layout_marginStart="20dp"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:lineSpacingExtra="6sp"
            android:text="아이디 님에게"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_cardview" />

        <TextView
            android:id="@+id/recommend_welfare_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainWhite"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/jalnan"
            android:lineSpacingExtra="6sp"
            android:paddingStart="12dp"
            android:text="복지혜택 10개를 추천해요"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_welfare_textview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recom_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_welfare_count" />

        <LinearLayout
            android:id="@+id/youtube_video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recom_recycler"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/youtube_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".80"
                android:background="@color/colorMainWhite"
                android:fontFamily="@font/jalnan"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="10dp"
                android:text="유튜버들의 생생한 혜택 리뷰!"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_video_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube_video_layout"/>

        <LinearLayout
            android:id="@+id/map_img_and_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/youtube_video_recyclerview"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:text="내 주변 혜택 찾기"
                android:textColor="@color/colorMainWhite"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/map_btn"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight=".55"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/shadow_button_layer_list"
                    android:fontFamily="@font/jalnan"
                    android:lineSpacingExtra="20sp"
                    android:text="지도에서 혜택 확인"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight=".45"
                    android:src="@drawable/map_function_img" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>