<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainWhite"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_fragment_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bauhaus_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="UrBene fit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/test_view_pager2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/youtube_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_textview" />

        <Button
            android:id="@+id/kakao_unlink_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카톡 회원탈퇴"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.161"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_fragment_cardview"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:elevation="30dp"
            app:cardBackgroundColor="@color/app_top_color"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_textview">

            <LinearLayout
                android:id="@+id/main_middle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_top_color"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_fragment_textview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".10"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight=".60"
                        android:fontFamily="@font/jalnan"
                        android:text="당신이 놓치고 있는"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/test_find_welfare_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".40"
                        android:background="@drawable/btn_round"
                        android:fontFamily="@font/jalnan"
                        android:text="혜택찾기"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".90"
                    android:scaleType="fitEnd"
                    android:src="@drawable/main_fragment_image" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/youtube_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainWhite"
            android:fontFamily="@font/jalnan"
            android:paddingStart="12dp"
            android:paddingTop="20dp"
            android:text="유튜버 혜택 소개 영상"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_fragment_cardview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_video_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube_text" />

        <TextView
            android:id="@+id/recommend_welfare_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainWhite"
            android:fontFamily="@font/jalnan"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:text="당신을 위한 맞춤 혜택!"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/youtube_video_recyclerview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recom_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/map_img_and_btn_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_welfare_textview" />

        <LinearLayout
            android:id="@+id/map_img_and_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_top_color"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recom_recycler">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_top_color"
                android:fontFamily="@font/jalnan"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:text="내 주변 혜택 찾기"
                android:textColor="@color/colorBlack"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight=".50"
                    android:src="@drawable/map_function_img" />

                <Button
                    android:id="@+id/map_btn"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight=".50"
                    android:background="@drawable/main_map_btn_background"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center"
                    android:lineSpacingExtra="20sp"
                    android:padding="30dp"
                    android:text="지도에서\n혜택 확인"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>