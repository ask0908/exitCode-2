<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activity.Compatibility.Compatibility_ThirdActivity">

    <LinearLayout
        android:id="@+id/third_question_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/third_question_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:fontFamily="@font/jalnan"
            android:text="Q3."
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#6f52e8"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:fontFamily="@font/jalnan"
            android:text="3/4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="30dp"
            android:gravity="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/third_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bazzi"
        android:text="버튼을 누르면 1000만원,\n대신 내 주변인 중 1명이 사고를\n당한다면"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_question_linear"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/third_question_image"
        android:layout_width="330dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_question_text"
        android:src="@drawable/third_question"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/third_question_first_btn"
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_question_image"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bazzi"
        android:text="나만 아니면 돼! 누른다!"
        android:textSize="25sp"
        android:background="#3A3A3A"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/third_question_second_btn"
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_question_first_btn"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bazzi"
        android:text="아니 누가 불행해질지 모르는데..\n누르지 않는다"
        android:textSize="24sp"
        android:background="#3A3A3A"
        android:textColor="#fff"/>

</androidx.constraintlayout.widget.ConstraintLayout>