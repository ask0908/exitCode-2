<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChoiceKeywordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/choice_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent=".09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ToolbarTheme"/>

    <TextView
        android:id="@+id/choice_description_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintHeight_percent=".045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_toolbar"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:lineSpacingExtra="10sp"
        android:text="관심사 선택"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/filter_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choice_keyword_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_description_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>