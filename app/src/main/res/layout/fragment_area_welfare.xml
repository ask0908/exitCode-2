<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AreaWelfareFragment">

    <TextView
        android:id="@+id/subject_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".93"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintVertical_bias=".05"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/jalnan"
        android:text="주제별 혜택"
        app:autoSizePresetSizes="@array/autosize_text_sizes"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subject_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subject_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/welfare_category_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>