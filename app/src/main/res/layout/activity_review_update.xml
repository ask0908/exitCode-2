<!--            android:id="@+id/update_review_photo"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="150dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:src="@drawable/add_photo"/>-->

    </LinearLayout>

</ScrollView>